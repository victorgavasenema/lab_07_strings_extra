#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    char frase [200];
    int i;
    printf("digite uma frase: ");
    fgets(frase, 200, stdin);
    
    for(i=0; i < 200; i++){
        if(frase[i] == 'r' && frase[i+1] != 'r' && frase[i+1] != ' ' && frase[i+1] != '\0'){
            frase[i] = 'l';
        }
        if(frase[i] == 'r' && frase[i+1] == 'r'){
            i++;
        }
    }
    
    for(i=0; i < 200; i++){
        if(frase[i] != '\0'){
            printf("%c", frase[i]);
        }
        else{
            return 0;
        }
    }

    return 0;
}
